{
  "audio_file": "input.mp3",
  "output_file": "neon_output.mp4",
  "visual": {
    "type": "neon_oscilloscope",
    "resolution": [1920, 1080],
    "fps": 60,
    "colors": {
      "primary": "#00F5FF",
      "secondary": "#FF00A0",
      "background": "#050510"
    },
    "params": {
      "glow_intensity": 2.0,
      "waveform_trail": true
    }
  },
  "postprocess": {
    "contrast": 1.2,
    "saturation": 1.4,
    "grain": 0.03,
    "vignette": 0.4,
    "chromatic_aberration": 0.5
  }
}
