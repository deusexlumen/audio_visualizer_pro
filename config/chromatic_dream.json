{
  "audio_file": "input.mp3",
  "output_file": "chromatic_output.mp4",
  "visual": {
    "type": "chroma_field",
    "resolution": [1920, 1080],
    "fps": 60,
    "colors": {
      "primary": "#9D4EDD",
      "secondary": "#FF006E",
      "background": "#030014"
    },
    "params": {
      "particle_count": 100,
      "connection_distance": 100,
      "chroma_influence": 1.0
    }
  },
  "postprocess": {
    "contrast": 1.1,
    "saturation": 1.4,
    "grain": 0.03,
    "vignette": 0.5,
    "chromatic_aberration": 0.5
  }
}
